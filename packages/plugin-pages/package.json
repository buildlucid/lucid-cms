{
	"name": "@lucidcms/plugin-pages",
	"version": "0.3.2",
	"description": "The official Pages plugin for Lucid",
	"type": "module",
	"types": "./dist/index.d.ts",
	"module": "dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsc && tsdown",
		"dev": "tsdown --watch",
		"format": "biome format ./src",
		"format:fix": "biome format --write ./src",
		"lint": "biome lint ./src",
		"lint:fix": "biome lint --apply ./src"
	},
	"files": ["dist"],
	"author": "Proto Digital",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ProtoDigitalUK/lucid.git",
		"directory": "packages/plugin-pages"
	},
	"keywords": [
		"CMS",
		"Lucid CMS",
		"Lucid",
		"Proto Digital",
		"Pages",
		"Plugin",
		"Slug"
	],
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@lucidcms/config": "*",
		"@lucidcms/core": "*",
		"@types/node": "^22.15.2",
		"tsdown": "^0.12.5",
		"typescript": "^5.8.3"
	},
	"peerDependencies": {
		"@lucidcms/core": "^0.11.0-alpha.0"
	},
	"volta": {
		"node": "22.15.0"
	},
	"engines": {
		"node": ">=22.0.0 <23.0.0"
	},
	"license": "MIT"
}
