{
	"name": "@lucidcms/plugin-local-storage",
	"version": "1.2.2",
	"description": "The official Local Storage plugin for Lucid CMS",
	"type": "module",
	"types": "./dist/index.d.ts",
	"module": "./dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsc && tsdown",
		"dev": "tsdown --watch",
		"format": "biome format ./src",
		"format:fix": "biome format --write ./src",
		"lint": "biome lint ./src",
		"lint:fix": "biome lint --write ./src"
	},
	"files": ["dist/**"],
	"author": "Lucid",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/buildlucid/lucid-cms.git",
		"directory": "packages/plugin-local-storage"
	},
	"keywords": ["CMS", "Lucid CMS", "Lucid", "Local Storage", "Plugin"],
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@lucidcms/config": "*",
		"@lucidcms/core": "*",
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^22.15.2",
		"tsdown": "^0.12.5",
		"typescript": "^5.8.3"
	},
	"peerDependencies": {
		"@lucidcms/core": "^0.12.0-alpha.1",
		"hono": "^4.7.11",
		"hono-openapi": "^0.4.8"
	},
	"dependencies": {
		"file-type": "^21.0.0",
		"fs-extra": "^11.3.0",
		"mime-types": "^3.0.1"
	},
	"volta": {
		"node": "22.15.0"
	},
	"engines": {
		"node": ">=22.0.0 <23.0.0"
	},
	"license": "MIT"
}
