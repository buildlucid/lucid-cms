{
    "name": "@lucidcms/node-adapter",
    "version": "0.1.0",
    "private": false,
    "description": "The official Node adapter for Lucid CMS",
    "type": "module",
    "types": "./dist/index.d.ts",
    "module": "dist/index.js",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "tsc && tsdown",
        "dev": "tsdown --watch",
        "format": "biome format ./src",
        "format:fix": "biome format --write ./src",
        "lint": "biome lint ./src",
        "lint:fix": "biome lint --apply ./src"
    },
    "files": [
        "dist"
    ],
    "author": "Proto Digital",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ProtoDigitalUK/lucid.git",
        "directory": "packages/node-adapter"
    },
    "keywords": [
        "CMS",
        "Lucid CMS",
        "Lucid",
        "Proto Digital",
        "Node",
        "Environment Adapter"
    ],
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@lucidcms/config": "*",
        "@lucidcms/core": "*",
        "@types/node": "^22.15.2",
        "tsdown": "^0.12.5",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "@hono/node-server": "^1.14.4",
        "@types/node-cron": "^3.0.11",
        "dotenv": "^16.5.0",
        "rolldown": "^1.0.0-beta.10-commit.87188ed",
        "rollup-plugin-node-externals": "^8.0.1"
    },
    "peerDependencies": {
        "@lucidcms/core": "^0.11.0-alpha.0",
        "hono": "^4.7.11",
        "hono-openapi": "^0.4.8"
    },
    "volta": {
        "node": "22.15.0"
    },
    "engines": {
        "node": ">=22.0.0 <23.0.0"
    },
    "license": "MIT"
}
