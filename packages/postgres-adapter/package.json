{
	"name": "@lucidcms/postgres-adapter",
	"version": "1.0.2",
	"private": false,
	"description": "The official Postgres adapter for Lucid CMS",
	"type": "module",
	"types": "./dist/index.d.ts",
	"module": "dist/index.mjs",
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsc && tsdown",
		"dev": "tsdown --watch",
		"format": "biome format ./src",
		"format:fix": "biome format --write ./src",
		"lint": "biome lint ./src",
		"lint:fix": "biome lint --write ./src"
	},
	"files": ["dist"],
	"author": "Lucid",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/buildlucid/lucid-cms.git",
		"directory": "packages/postgres-adapter"
	},
	"keywords": ["CMS", "Lucid CMS", "Lucid", "Postgres", "DB Adapter"],
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@lucidcms/config": "*",
		"@lucidcms/core": "*",
		"@types/node": "^24.10.4",
		"tsdown": "^0.18.2",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"kysely": "0.28.9",
		"kysely-postgres-js": "^3.0.0",
		"postgres": "^3.4.7"
	},
	"peerDependencies": {
		"@lucidcms/core": "^0.12.0-alpha.1"
	},
    "volta": {
        "node": "24.11.1"
    },
    "engines": {
        "node": "^24.0.0"
    },
	"license": "MIT"
}
