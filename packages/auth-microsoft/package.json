{
    "name": "@lucidcms/auth-microsoft",
    "version": "1.0.0",
    "description": "The official Microsoft authentication provider plugin for Lucid CMS",
    "type": "module",
    "types": "./dist/index.d.ts",
    "module": "dist/index.mjs",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "tsc && tsdown",
        "dev": "tsdown --watch",
        "format": "biome format ./src",
        "format:fix": "biome format --write ./src",
        "lint": "biome lint ./src",
        "lint:fix": "biome lint --write ./src"
    },
    "files": [
        "dist",
        "assets"
    ],
    "author": "Lucid",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/buildlucid/lucid-cms.git",
        "directory": "packages/auth-microsoft"
    },
    "keywords": [
        "CMS",
        "Lucid CMS",
        "Lucid",
        "Microsoft",
        "Authentication",
        "Provider",
        "Plugin"
    ],
    "devDependencies": {
        "@biomejs/biome": "^2.3.10",
        "@lucidcms/config": "*",
        "@lucidcms/core": "*",
        "@types/node": "^24.10.4",
        "tsdown": "^0.18.2",
        "typescript": "^5.9.3"
    },
    "peerDependencies": {
        "@lucidcms/core": "^0.12.0-alpha.1"
    },
    "volta": {
        "node": "24.11.1"
    },
    "engines": {
        "node": "^24.0.0"
    },
    "license": "MIT"
}