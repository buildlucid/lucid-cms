{
	"name": "@lucidcms/cloudflare-adapter",
	"version": "1.1.0",
	"private": false,
	"description": "The official Cloudflare Worker adapter for Lucid CMS",
	"type": "module",
	"types": "./dist/index.d.ts",
	"module": "dist/index.mjs",
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"types": "./dist/index.d.ts"
		},
        "./types": {
            "types": "./dist/types.d.ts",
            "default": "./dist/types.mjs"
        }
	},
	"scripts": {
		"build": "tsc && tsdown",
		"dev": "tsdown --watch",
		"format": "biome format ./src",
		"format:fix": "biome format --write ./src",
		"lint": "biome lint ./src",
		"lint:fix": "biome lint --write ./src"
	},
	"files": ["dist"],
	"author": "Lucid",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/buildlucid/lucid-cms.git",
		"directory": "packages/cloudflare-adapter"
	},
	"keywords": [
		"CMS",
		"Lucid CMS",
		"Lucid",
		"Cloudflare",
		"Worker",
		"Environment Adapter"
	],
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@lucidcms/config": "*",
		"@lucidcms/core": "*",
		"@types/node": "^24.10.4",
		"tsdown": "^0.18.2",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@hono/node-server": "^1.19.7",
		"rolldown": "^1.0.0-beta.55",
		"wrangler": "^4.56.0"
	},
	"peerDependencies": {
		"@lucidcms/core": "^0.12.0-alpha.1",
		"hono": "^4.11.1",
        "hono-openapi": "^0.4.8"
	},
    "volta": {
        "node": "24.11.1"
    },
    "engines": {
        "node": "^24.0.0"
    },
	"license": "MIT"
}
